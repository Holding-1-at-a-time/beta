{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "extendedDiagnostics": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleDetection": "auto",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(root)/**/*.ts",
    "app/(root)/**/*.tsx",
    "app/(auth)/**/*.ts",
    "app/(auth)/**/*.tsx",
    "app/(root)/page.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}